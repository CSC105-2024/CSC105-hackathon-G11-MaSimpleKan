generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  fName    String
  sName    String
  tel      String
  Post     Post[]
  Comment  Comment[]
}

enum Subject {
  math
  biology
  chemistry
  physics
  computer
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  subject     Subject
  date        DateTime @default(now())

  userId Int
  User   User @relation(fields: [userId], references: [id])

  Comment Comment[]
}

model Comment {
  id           Int    @id @default(autoincrement())
  text         String
  correctCount Int @default(0)
  simpleCount  Int @default(0)

  userId Int
  User   User @relation(fields: [userId], references: [id])

  postId Int
  Post   Post @relation(fields: [postId], references: [id])
}
